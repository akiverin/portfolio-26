{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "shared/*": ["src/shared/*"],
      "assets/*": ["src/assets/*"],
      "config/*": ["src/config/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"],
      "types/*": ["src/types/*"],
      "hooks/*": ["src/hooks/*"],
      "entities/*": ["src/entities/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
